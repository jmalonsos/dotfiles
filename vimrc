" pathogen plugin manager
call pathogen#infect()

"use vim features instead vi
set nocompatible

" searching
set incsearch

" displaying text
set number

" syntax and highlighting
syntax enable
set hlsearch

" messages and info
set showcmd
set ruler

" tabs and indenting
set autoindent
set smartindent
set expandtab
set shiftwidth=4
set softtabstop=4
set tabstop=4
set shiftround

